<div class="container">
  <div class="nested-fields">
    <div class="form-group shadow pt-3 pl-3 mb-3 bg-light rounded flex-column d-flex mt-5" >
      <div class="form-group row">

        <%= f.label "TASK NAME",class: "col-2 col-form-label text-dark" %>
        <div class="col-9">
          <%= f.text_field :name, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">

        <%= f.label "PR lINK",class: "col-2 col-form-label text-dark" %>
        <div class="col-9">
          <%= f.url_field :pr, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">

        <%= f.label "HOUR",class: "col-2 col-form-label text-dark" %>

        <div class="col-2">
          <%= f.number_field :hours,step:"1", class: "form-control shadow rounded"%>
        </div>
        <div class="col-6">
        </div>

        <%= link_to_remove_association "Delete", f , class: "btn btn-outline-danger my-1 ml-2 btn-sm"%>

      </div>

    </div>
  </div>
</div>
